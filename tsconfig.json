{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "outDir": "out", // js 파일이 생성되는 위치
        "sourceMap": true, // 디버깅
        "resolveJsonModule": true, // json 가져오기
        "esModuleInterop": true // caver-js 모듈을 가져오려면 설정해야함
    },
    "include": [
		"main.ts",
		"src/**/*",
		"src/**/*.json"
	]
}
